---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const images = await getCollection('images');
  const categories = [...new Set(images.flatMap(image => image.data.categories))];
  
  return categories.map(category => ({
    params: { category },
    props: { category }
  }));
}

const { category } = Astro.props;
const images = await getCollection('images', ({ data }) => 
  data.categories.includes(category)
);
---

<Layout title={`${category} Photos`}>
  <h1>{category} Photos</h1>

  <div class="grid">
    {images.map((image, index) => (
      <a href={`/images/${image.slug}`} class="image-card">
        <Image 
          src={image.data.image} 
          alt={image.data.title} 
          width={300} 
          height={300} 
          loading={index < 6 ? "eager" : "lazy"} 
        />
        <div class="image-info">
          <h2>{image.data.title}</h2>
          <div class="categories">
            {image.data.categories.map(cat => (
              <span class="category">{cat}</span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</Layout>

<style>
  h1 {
    margin-bottom: 2rem;
    font-size: 2.5rem;
    text-transform: capitalize;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .image-card {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .image-card:hover {
    transform: translateY(-4px);
  }

  .image-card img {
    width: 100%;
    aspect-ratio: auto;
    object-fit: contain;
    border-radius: 4px;
  }

  .image-info {
    margin-top: 0.5rem;
  }

  .image-info h2 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .category {
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
    background: #f5f5f5;
    border-radius: 12px;
  }
</style> 