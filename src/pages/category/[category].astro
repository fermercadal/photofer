---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const images = await getCollection('images');
  const categories = [...new Set(images.flatMap(image => image.data.categories))];
  
  return categories.map(category => ({
    params: { category },
    props: { category }
  }));
}

const { category } = Astro.props;
const images = await getCollection('images', ({ data }) => 
  data.categories.includes(category)
);

const allImages = await getCollection('images');
const categories = [...new Set(allImages.flatMap(image => image.data.categories))];
---

<Layout title={`${category} Photos`}>
  <h1 class="text-4xl font-bold mb-8 text-center capitalize">{category} Photos</h1>
  <section>
    <h2 class="text-lg font-bold mb-4 text-center">Categor√≠as</h2>
    <div class="flex flex-wrap gap-3 justify-center mb-8">
      <a 
        href="/catalog" 
        class={`text-black dark:text-white font-medium hover:underline ${!category ? 'font-bold underline' : ''}`}
      >Todas</a>
      {categories.map(cat => (
        <a 
          href={`/category/${cat}`} 
          class={`text-black dark:text-white font-medium hover:underline ${cat === category ? 'font-bold underline' : ''}`}
        >{cat}</a>
      ))}
    </div>
  </section>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    {images.map((image, index) => (
      <a href={`/images/${image.slug}`} class="block rounded-lg overflow-hidden bg-white dark:bg-zinc-800 hover:scale-105 transition-transform">
        <Image 
          src={image.data.image} 
          alt={image.data.title} 
          width={300} 
          height={300} 
          loading={index < 6 ? "eager" : "lazy"} 
          class="w-full h-64 object-cover"
        />
        <div class="p-2">
          <h2 class="text-lg font-medium text-center text-black dark:text-white">{image.data.title}</h2>
          <div class="flex flex-wrap gap-2 justify-center mt-2">
            {image.data.categories.map(cat => (
              <span class="px-2 py-1 rounded bg-gray-100 dark:bg-zinc-700 text-xs text-gray-700 dark:text-gray-200">{cat}</span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</Layout> 