---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const images = await getCollection('images');
  return images.map(image => ({
    params: { slug: image.slug },
    props: { image }
  }));
}

const { image } = Astro.props;
---

<Layout title={image.data.title}>
  <article class="max-w-4xl mx-auto bg-white dark:bg-zinc-900 rounded-lg p-5 mt-8">
    <div class="flex flex-col items-center">
      <Image 
        src={image.data.image} 
        alt={image.data.title} 
        width={1200} 
        height={800} 
        loading="eager" 
        class="w-full h-auto object-contain rounded-lg mb-6"
      />
    </div>
    <div class="content mx-auto">
      <h1 class="text-3xl font-bold mb-4 text-center text-black dark:text-white">{image.data.title}</h1>
      {image.data.description && (
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-6 text-center">{image.data.description}</p>
      )}
      <div class="metadata border-t border-gray-200 dark:border-zinc-700 pt-4 mt-4">
        <div class="date mb-2 text-sm text-gray-500 dark:text-gray-400">
          <strong>Date:</strong> {image.data.date.toLocaleDateString()}
        </div>
        {image.data.exif && (
          <div class="exif my-6 p-4 bg-gray-100 dark:bg-zinc-800 rounded-lg">
            <h2 class="text-lg font-semibold mb-2 text-black dark:text-white">Camera Details</h2>
            <div class="grid grid-cols-1">
              {image.data.exif.model && (
                <div class="text-sm"><strong>Camera:</strong> {image.data.exif.model}</div>
              )}
              {image.data.exif.lens && (
                <div class="text-sm"><strong>Lens:</strong> {image.data.exif.lens}</div>
              )}
              {image.data.exif.focalLength && (
                <div class="text-sm"><strong>Focal Length:</strong> {image.data.exif.focalLength}</div>
              )}
              {image.data.exif.aperture && (
                <div class="text-sm"><strong>Aperture:</strong> {image.data.exif.aperture}</div>
              )}
              {image.data.exif.shutterSpeed && (
                <div class="text-sm"><strong>Shutter Speed:</strong> {image.data.exif.shutterSpeed}</div>
              )}
              {image.data.exif.iso && (
                <div class="text-sm"><strong>ISO:</strong> {image.data.exif.iso}</div>
              )}
            </div>
          </div>
        )}
        <div class="categories flex flex-wrap gap-2 mt-4">
          <strong class="text-sm">Categories:</strong>
          {image.data.categories.map(category => (
            <a href={`/category/${category}`} class="px-2 py-1 rounded bg-gray-200 dark:bg-zinc-700 text-xs text-gray-700 dark:text-gray-200">{category}</a>
          ))}
        </div>
      </div>
    </div>
  </article>
</Layout> 