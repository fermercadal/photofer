---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const allImages = await getCollection('images');
const categories = [...new Set(allImages.flatMap(image => image.data.categories))];
---

<Layout title="Photo Catalog">
  <h1 class="text-4xl font-bold mb-8 text-center">Catálogo</h1>

  <section>
    <h2 class="text-lg font-bold mb-4 text-center">Categorías</h2>
    <div class="flex flex-wrap gap-3 justify-center mb-8">
      <a href="/catalog" class="text-black dark:text-white font-medium underline">Todas</a>
      {categories.map(category => (
        <a href={`/category/${category}`} class="text-black dark:text-white font-medium hover:underline">{category}</a>
      ))}
    </div>
  </section>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    {allImages.map((image, index) => (
      <a href={`/images/${image.slug}`} class="block rounded-lg overflow-hidden bg-white dark:bg-zinc-800 hover:scale-105 transition-transform">
        <Image 
          src={image.data.image} 
          alt={image.data.title} 
          width={300} 
          height={300} 
          loading={index < 6 ? "eager" : "lazy"} 
          class="w-full h-64 object-cover"
        />
        <div class="p-2">
          <h2 class="text-lg font-medium text-center text-black dark:text-white">{image.data.title}</h2>
          <div class="flex flex-wrap gap-2 justify-center mt-2">
            {image.data.categories.map(category => (
              <span class="px-2 py-1 rounded bg-gray-100 dark:bg-zinc-700 text-xs text-gray-700 dark:text-gray-200">{category}</span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</Layout> 